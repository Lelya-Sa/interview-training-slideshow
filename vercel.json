{
  "buildCommand": "cd client && npm run build && cd .. && mkdir -p build && cp -r client/build/* build/",
  "outputDirectory": "build",
  "installCommand": "npm run install-all",
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/((?!api/).*)",
      "destination": "/index.html"
    }
  ]
}
